@model List<CourseReg.ViewModel.Course_VMQ>
@{
    ViewBag.Title = "Index";
}
<h2>Content List</h2>
<div class="col-md-offset-5 pull-right" style="margin-top:-40px">
    <a href="@Url.Action("Subjects","Course")" class="btn btn-primary">Create New</a>
</div>
<div class="row">

    <div class="col-md-12">
        <table class="table table-responsive table-bordered table-striped">
            <thead>
                <tr>
                    <th>Sr#</th>
                    <th>Student Name</th>
                    <th>Semester Name</th>
                    <th>Book Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            @foreach (var lst in Model)
            {
                <tr>
                    <td>@lst.id</td>
                    <td>@lst.StdName</td>
                    <td>@lst.ChemesterName</td>
                    <td>@lst.BookName</td>
                    <td>
                        <a href="@Url.Action("Delete", new { id = lst.id })" class="btn btn-danger" data-toggle="tooltip" data-placement="left" title="Click Me To Delte">Delete</a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

