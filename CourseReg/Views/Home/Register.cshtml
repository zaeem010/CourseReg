@model CourseReg.Models.StdLogin
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>
<div class="col-md-offset-5 pull-right" style="margin-top:-40px">
    <a href="@Url.Action("Indexre","Home")" class="btn btn-primary">List Content</a>
</div>
@using (Html.BeginForm("Registers", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-2">
            <label>Registration#</label>
            @Html.TextBoxFor(m => m.Reg, new { @class = "form-control", @type = "required", @placeholder = "Registration...", maxlength = "20", })
        </div>
        <div class="col-md-3">
            <label> Student Name</label>
            @Html.TextBoxFor(m => m.StdName, new { @class = "form-control", @required = "required", @placeholder = "Name...", maxlength = "20", })
        </div>
        <div class="col-md-3 ">
            <label>Father Name</label>
            @Html.TextBoxFor(m => m.FatherName, new { @class = "form-control", @placeholder = "Name...", maxlength = "20", })
        </div>
        <div class="col-md-3 ">
            <label>College Joining Date</label>
            @Html.TextBoxFor(m => m.ColgJoin, new { @class = "form-control", @placeholder = "Name...", @type = "date", })
        </div>
        <div class="col-md-3 " style="margin-top:20px">
            <label>User Name</label>
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "User Name...", })
        </div>
        <div class="col-md-3 " style="margin-top:20px">
            <label>Password</label>
            @Html.TextBoxFor(m => m.Pass, new { @class = "form-control", @placeholder = "Password...", @type = "password" })
        </div>
        <div class="form-group">

            <div class="col-md-6" style="margin-top:20px">
                <label>Address</label>
                @Html.TextAreaFor(m => m.Address, new { @class = "form-control", @placeholder = "Address...", @type = "password", rows = "4", cols = "10" })
            </div>

        </div>
        <div class="form-group" style="margin-top:20px">
            <div class="col-md-offset-9 col-md-10">
                @if (Model.id == 0)
                {
                    <input type="submit" onclick="return confirm('Do you want to Save ..')" class="btn btn-primary col-md-3" value="Save" />
                }
                else
                {
                    <input type="submit" onclick="return confirm('Do you want to update ..')" class="btn btn-primary col-md-3" value="Update" />
                }
            </div>
        </div>

    </div>
    @Html.HiddenFor(m => m.id)
}

